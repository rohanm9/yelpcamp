<% include ../partials/header %>
    <div class="container">
        <h1 style="text-align:center; margin-top:15px; margin-bottom:30px; ">Edit the Campground</h1>
        <div class="row">
            <div style="width:40%; margin:0 auto;">
            <form action="/campgrounds/<%= campground._id %>" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="campground[price]" value="<% campground.price %>" min=".01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="url" name="campground[image]" value="<%= campground.image %>" required>
                </div>
                <!-- <div class="form-group">
                    <input class="form-control" type="text" name="location" value="<%= campground.location %>" required>
                </div> -->
                <div class="form-group">
                    <textarea class="form-control" name="campground[description]"><%- campground.description %></textarea>
                </div>
                <button class="btn btn-primary btn-block">SUBMIT</button>
            </form>
            <a style="display:block; margin-top:7px;"href="/campgrounds">Go back</a>
            </div>
       </div>
    </div>
<% include ../partials/footer %>
