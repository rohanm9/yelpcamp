<% include ../partials/header %>    
    <div class="container">
        <h1 style="text-align:center; margin-top:15px; margin-bottom:30px; ">Create a New Campground</h1>
        <div class="row">       
            <div style="width:40%; margin:0 auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="url" name="image" placeholder="Image URL" required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="descr">add description here..
                    </textarea>
                </div>
                <button class="btn btn-primary btn-block">SUBMIT</button>
            </form>
            <a style="display:block; margin-top:7px;"href="/campgrounds">Go back</a>
            </div>
       </div>
    </div>
<% include ../partials/footer %>